<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LOGIN</title>
    <link rel="stylesheet" href="css/login.css">
  </head>
  <body>
    <header>
        <h2>ログインページ</h2>
        <a href="/">メニュー</a>
    </header>
    <div id="content">
        <form method="post">
            
            <input type="text" name ="login_name" id = "login" value = "" placeholder="username" required>
            
            <input type="text" id ="pass" value = "" placeholder="password" required>
            
            <input type="submit" value="ログイン" onclick="return word_check()">
        </form>
    </div>

    <script>
        function word_check(){
            var admin_flag = false;
            var user_flag = false;

            if(login.value === "<%= user[0].name %>" && pass.value === "<%= user[0].password %>"){
                admin_flag = true;
            }
            if(login.value === "<%= user[1].name %>" && pass.value === "<%= user[1].password %>"){
                admin_flag = true;
            }
            if(admin_flag || user_flag){
                return true;
            }
            alert("該当するアカウントが有りません");
            return false;
        }
    </script>
  </body>
</html>